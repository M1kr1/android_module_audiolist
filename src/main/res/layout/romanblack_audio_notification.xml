<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/romanblack_audio_main_root"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="64dp"
              android:background="#000000"
              android:gravity="center_vertical">
    
    <ImageView android:id="@+id/romanblack_audio_notification_thumb"
               android:layout_height="42dp"
               android:layout_width="42dp"
               android:padding="1dp"
               android:background="#ffffff"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"/>
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    
        <TextView android:id="@+id/romanblack_audio_notification_title"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text=""
                  android:textColor="#ffffff"
                  android:textStyle="bold"
                  android:textSize="10dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="5dp"/>
    
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp">
        
            <ImageView android:id="@+id/romanblack_audio_notification_prev"
                       android:layout_width="33dp"
                       android:layout_height="33dp"
                       android:src="@drawable/romanblack_audio_prev_track"/>
        
            <ImageView android:id="@+id/romanblack_audio_notification_play"
                       android:layout_width="33dp"
                       android:layout_height="33dp"
                       android:src="@drawable/romanblack_audio_pause"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"/>
        
            <ImageView android:id="@+id/romanblack_audio_notification_next"
                       android:layout_width="33dp"
                       android:layout_height="33dp"
                       android:src="@drawable/romanblack_audio_next_track"/>
        
        </LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>
