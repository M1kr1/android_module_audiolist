<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/romanblack_audio_sendmessage_root"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="#cccccc">

    <LinearLayout android:id="@+id/romanblack_audio_sendmessage_header"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout android:id="@+id/romanblack_audio_sendmessage_edittext_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="110dp"
                  android:orientation="horizontal"
                  android:padding="10dp">

        <EditText android:id="@+id/romanblack_audio_sendmessage_edittext"
                  android:layout_width="fill_parent"
                  android:textColor="#66000000"
                  android:layout_height="fill_parent"
                  android:gravity="top"/>

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_weight="1">

    </LinearLayout>

    <LinearLayout android:id="@+id/romanblack_audio_sendmessage_bottom_panel"
                  android:layout_height="50dp"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:background="#66000000"
                  android:gravity="center_vertical"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp">

        <LinearLayout android:layout_height="27dp"
                      android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center">
            
            <TextView android:id="@+id/romanblack_audio_sendmessage_clear_btn"
                      android:layout_height="26dp"
                      android:layout_width="wrap_content"
                      android:text="@string/clear" android:gravity="center" android:paddingLeft="5dp"
                      android:paddingRight="5dp"/>
            
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="26dp"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:gravity="right">

            <TextView android:id="@+id/romanblack_audio_sendmessage_symbols_counter"
                      android:layout_height="26dp"
                      android:text="0/150"
                      android:layout_width="wrap_content"
                      android:paddingLeft="26dp"
                      android:layout_weight="1"
                      android:textColor="#ffffff"
                      android:gravity="center"/>

            <LinearLayout android:layout_height="26dp"
                          android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:baselineAligned="false"
                          android:gravity="center">
                <TextView android:id="@+id/romanblack_audio_sendmessage_post_btn"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:text="@string/post"
                          android:paddingLeft="5dp" android:paddingRight="5dp" android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
