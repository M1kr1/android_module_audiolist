<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="51dp"
              android:background="@drawable/romanblack_audio_listitem_set_drawable"
              android:paddingTop="0dp"
              android:paddingBottom="1dp"
              android:paddingRight="10dp"
              android:paddingLeft="0dp">
            
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="50dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">
                
        <FrameLayout android:layout_height="50dp"
                     android:layout_width="50dp">
            
            <ImageView android:id="@+id/romanblack_audio_listview_item_thumb"
                       android:layout_height="40dp"
                       android:layout_width="40dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginBottom="5dp"
                       android:layout_marginRight="5dp"
                       android:padding="1dp"
                       android:background="#ffffff"/>
            
            <LinearLayout android:layout_height="40dp"
                          android:layout_width="40dp"
                          android:orientation="vertical"
                          android:gravity="bottom|right"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="5dp"
                          android:layout_marginBottom="5dp"
                          android:layout_marginRight="5dp"
                          android:paddingBottom="1dp"
                          android:paddingRight="1dp">
                
                <TextView android:id="@+id/romanblack_audio_listview_tracks_count"
                          android:layout_height="19dp"
                          android:layout_width="19dp"
                          android:gravity="center"
                          android:textColor="#ffffff"
                          android:textSize="13dp"
                          android:text="0"
                          android:background="#66000000"/>
                        
            </LinearLayout>
            
        </FrameLayout>
                
        <LinearLayout android:layout_height="fill_parent"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:paddingLeft="5dp"
                      android:paddingRight="0dp">
            
            <LinearLayout android:orientation="vertical"
                          android:layout_height="fill_parent"
                          android:layout_width="fill_parent"
                          android:paddingTop="2dp">
                    
                <TextView android:id="@+id/romanblack_audio_listview_item_title"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:gravity="top"
                          android:singleLine="true"
                          android:textColor="#66000000"
                          android:textStyle="bold"
                          android:textSize="15dp"/>
                
                <LinearLayout android:orientation="horizontal"
                              android:layout_height="wrap_content"
                              android:layout_width="fill_parent"
                              android:gravity="center">
                
                    <ImageView android:id="@+id/romanblack_audio_listview_item_arrow"
                               android:layout_height="20dp"
                               android:layout_width="26dp"
                               android:paddingLeft="6dp"
                               android:paddingRight="6dp"
                               android:paddingTop="5dp"
                               android:paddingBottom="5dp"
                               android:src="@drawable/romanblack_audio_set_arrow"
                               android:background="@drawable/romanblack_audio_set_arrow_bg"/>
                
                </LinearLayout>
            
            </LinearLayout>
        
        </LinearLayout>
        
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="15dp">
            
            <LinearLayout android:id="@+id/romanblack_audio_listview_item_comments_count_layput"
                          android:layout_height="27dp"
                          android:layout_width="26dp"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:background="@drawable/romanblack_audio_comments_counter"
                          android:paddingBottom="5dp">
                    
                <TextView android:id="@+id/romanblack_audio_listview_item_comments_count"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textColor="#ffffff"
                          android:text="+"
                          android:textSize="12dp"/>
            
            </LinearLayout>
            
            <!--<ImageView android:id="@+id/romanblack_audio_listview_item_set_arrow"
            android:layout_height="10dp"
            android:layout_width="14dp"
            android:src="@drawable/romanblack_audio_set_arrow"/>-->
            
        </LinearLayout>
            
    </LinearLayout>
    
</LinearLayout>
